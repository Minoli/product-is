<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wso2.is</groupId>
        <artifactId>org.wso2.carbon.iam.portal.parent</artifactId>
        <relativePath>../../pom.xml</relativePath>
        <version>6.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>org.wso2.is.portal.user.client.realmservice</artifactId>
    <packaging>bundle</packaging>

    <name>WSO2 User RealmService - Client Bundle</name>
    <description>This feature contains the OSGi service for RealmService</description>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.identity.mgt</groupId>
            <artifactId>org.wso2.carbon.identity.mgt</artifactId>
            <version>${org.wso2.carbon.identity.mgt.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.eclipse.osgi</groupId>
            <artifactId>org.eclipse.osgi.services</artifactId>
        </dependency>

        <!--<dependency>-->
            <!--<groupId>org.apache.felix</groupId>-->
            <!--<artifactId>org.apache.felix.scr.ds-annotations</artifactId>-->
        <!--</dependency>-->
    </dependencies>

    <properties>
        <private.package>org.wso2.is.portal.user.client.realmservice.internal.*</private.package>
        <import.package>
            org.osgi.framework,
            javax.security.*,
            org.slf4j.*;version="${slf4j.import.version.range}",
            org.wso2.carbon.identity.mgt.*;version="${org.wso2.carbon.identity.mgt.version.range}",
        </import.package>
        <export.package>
            !org.wso2.is.portal.user.client.realmservice.internal.*,
            org.wso2.is.portal.user.client.realmservice.*;version="${project.version}"
        </export.package>
        <bundle.activator>
            org.wso2.is.portal.user.client.realmservice.internal.Activator
        </bundle.activator>

        <checkstyle.skip>true</checkstyle.skip>
    </properties>

</project>
